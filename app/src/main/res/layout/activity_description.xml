<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/scroll_view_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/description_text"
            android:layout_width="@dimen/description_text_width"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/text_size"
            tools:text="The statue of liberty" />
    </ScrollView>

    <ImageView
        android:id="@+id/description_image"
        android:layout_width="@dimen/description_image_dimension"
        android:layout_height="@dimen/description_image_dimension"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/description_image_marginT"
        android:contentDescription="@string/content_description_description"
        android:scaleType="matrix"
        tools:src="@drawable/museum_of_natural_history" />
</RelativeLayout>